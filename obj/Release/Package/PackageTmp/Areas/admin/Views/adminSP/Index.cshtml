@model IEnumerable<Trang_web_ban_dien_thoai.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2 style="style=" text-align:center;">QUẢN LÝ THÔNG TIN ĐIỆN THOẠI</h2>

<p>
    @Html.ActionLink("Thêm Điện thoại mới", "Create", null, new { @class = "btn btn-warning" })
</p>
<table class="table">
    <tr>
        <th style="width:200px">
            @Html.DisplayNameFor(model => model.TenSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaSanPham)  
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaLoaiSanPham)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.HinhChinh)
        </th>
     
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoaiSanPham)             
            </td>

            <td>
                <img src="~/Asset/images/@item.HinhChinh" style="max-width:100px;max-height:100px" />
            </td>

            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSanPham }) |
                @Html.ActionLink("Xem", "Details", new { id = item.MaSanPham}) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaSanPham })
            </td>
        </tr>
    }

</table>