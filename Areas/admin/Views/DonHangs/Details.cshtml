@model  List<Trang_web_ban_dien_thoai.Areas.admin.Model.DetailOrderViewModel>

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>DonHang</h4>
    <hr />
    <div class="container">
        <table class="table">
            <tr>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Hình ảnh
                </th>
                <th>
                    Số lượng
                </th>
                <th>
                    Đơn giá
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.TenSP
                    </td>
                    <td>
                        <img src="~/Asset/images/@item.HinhAnh" style="max-width:100px;max-height:100px"/>
                    </td>
                    <td>
                        @item.SoLuong
                    </td>
                    <td>
                        @item.DonGia
                    </td>

                </tr>
            }

        </table>
    </div>


</div>
<p>
    
    @Html.ActionLink("Back to List", "Index")
</p>
