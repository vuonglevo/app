
@{
    ViewBag.Title = "_MainLayout";
}

<h2></h2>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Free Bootstrap Themes by Zerotheme dot com - Free Responsive Html5 Templates">


    <title>Mobile Shop</title>

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="~/Asset/css/bootstrap.min.css" type="text/css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Asset/css/style.css">


    <!-- Custom Fonts -->
    <link rel="stylesheet" href="font-awesome/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="fonts/font-slider.css" type="text/css">

    <!-- jQuery and Modernizr-->
    <script src="~/Asset/js/jquery-2.1.1.js"></script>

    <!-- Core JavaScript Files -->
    <script src="~/Asset/js/bootstrap.min.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
</head>




@{ var usercustomer = Session["KhachHang"] as Trang_web_ban_dien_thoai.Models.KhachHang;
}
<body>
    <!--Top-->
    <nav id="top">
        <div class="container">
            <div class="row">

                @if (usercustomer == null)
                {
                    <div class="col-xs-6">
                        <ul class="top-link">
                            <li><a href="@Url.Action("DangNhap","Account")"><span class="glyphicon glyphicon-user"></span> Tai Khoan</a></li>
                            <li><a href="@Url.Action("DangKy","Account")"><span class="glyphicon glyphicon-user"></span> Dang Ky</a></li>
                          
                        </ul>
                    </div>
                }
                else
                {
                    <div class="col-xs-6">
                        <ul class="top-link">
                            <li><span class="glyphicon glyphicon-user"></span> @usercustomer.TenKH</li>
                            <li><a href="@Url.Action("Logout","Account")"><span class="glyphicon glyphicon-envelope"></span> Dang Xuat</a></li>
                        </ul>
                    </div>
                }

            </div>
        </div>
    </nav>
    <!--Header-->
    <header class="container">
        <div class="row">
            <div class="col-md-4">
                <div id="logo"><img src="~/Asset/images/HVH (3).png " style="max-width:200px; max-height:200px" /></div>
            </div>

                <div class="col-md-4">
                    <form class="form-search" action="~/Shop/Search">
                        <input type="text" class="input-medium search-query" name="keyword">
                        <button type="submit" class="btn"><span class="glyphicon glyphicon-search"></span></button>
                    </form>
                </div>

            @Html.Action("GioHangPartial", "GioHang")
        </div>
    </header>
    <!--Navigation-->
    <nav id="menu" class="navbar">
        <div class="container">
            <div class="navbar-header">
                <span id="heading" class="visible-xs">Categories</span>
                <button type="button" class="btn btn-navbar navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse"><i class="fa fa-bars"></i></button>
            </div>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li>  @Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        @Html.ActionLink("Products", "Index", "Shop")

                    </li>

                    <li >
                        <a href="@Url.Action("Introduce","Home")" >Introduce</a>
                    </li>

                    <li class="dropdown">
                        @Html.ActionLink("Contact", "Contact", "Home")
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--//////////////////////////////////////////////////-->
    <!--///////////////////HomePage///////////////////////-->
    <!--//////////////////////////////////////////////////-->
    @RenderBody()
    <footer>
        <div class="container">
            <div class="wrap-footer">
                <div class="row">
                    <div class="col-md-3 col-footer footer-1">
                        <img src="~/Asset/images/HVH (3).png" />
                        <p></p>
                    </div>
                    <div class="col-md-3 col-footer footer-2">
                        <div class="heading"><h4>Dịch vụ khách hàng</h4></div>
                        <ul>
                            <li><a href="#">Về chúng tôi</a></li>
                            <li><a href="#">Thông tin giao hàng</a></li>
                            <li><a href="#">Chính sách bảo mật</a></li>
                            <li><a href="#">Điều khoản và bảo mật</a></li>
                            <li><a href="#">Liên hệ</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-footer footer-3">
                        <div class="heading"><h4>Tài khoản</h4></div>
                        <ul>
                            <li><a href="#">Tài khoản của tôi</a></li>
                            <li><a href="#">Thương hiệu</a></li>
                            <li><a href="#">Mã giảm giá</a></li>
                            <li><a href="#">Đặc biệt</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-footer footer-4">
                        <div class="heading"><h4>Liên hệ chúng tôi</h4></div>
                        <ul>
                            <li><span class="glyphicon glyphicon-home"></span>Binh Duong,Vietnam</li>
                            <li><span class="glyphicon glyphicon-earphone"></span>0303030303030</li>
                            <li><span class="glyphicon glyphicon-envelope"></span>huy@gmail.com</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">

                    </div>
                    <div class="col-md-6">
                        <div class="pull-right">
                            <ul>
                                <li><img src="~/Asset/images/visa-curved-32px.png" /></li>
                                <li><img src="~/Asset/images/paypal-curved-32px.png" /></li>
                                <li><img src="~/Asset/images/discover-curved-32px.png" /></li>
                                <li><img src="~/Asset/images/maestro-curved-32px.png" /></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>


