@model List<Trang_web_ban_dien_thoai.Models.SanPham>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">

        @if (Model.Count < 0)
        {
            <div class="heading">
                <h2>Không có kết quả tìm kiếm nào của từ khóa "@ViewBag.keyWord"</h2>
            </div>
        }
        else
        {
            <div class="heading">
                <h2>Kết quả tìm kiếm của từ khóa "@ViewBag.keyWord"</h2>
            </div>
            <div class="products">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="@Url.Action("Details","Shop", new { id = item.MaSanPham})"><img src="~/Asset/images/@item.HinhChinh" style="max-width: 160px" /></a></div>
                            <div class="buttons">
                                <a class="btn cart" href="@Url.Action("ThemGioHang", "GioHang", new { ms = item.MaSanPham, url = Request.Url.ToString() })"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                               
                            </div>
                            <div class="caption">
                                <div class="name"><h3><a href="product.html">@item.TenSanPham</a></h3></div>
                                <div class="price">@item.Gia VND</div>
                                <div class="rating"></div>
                            </div>
                        </div>
                    </div>
                }


            </div>
        }



        <style>
            .MenuTrang {
                display: inline;
                text-align: center;
            }
        </style>
    </div>
</div>

