
@{
    ViewBag.Title = "Home Page";
}

<div id="page-content" class="home-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Carousel -->
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators hidden-xs">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Asset/images/mainbanner1.jpg" alt="First slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                        <div class="item">
                            <img src="~/Asset/images/mainbanner2.jpg" alt="Second slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                        <div class="item">
                            <img src="~/Asset/images/mainbanner3.jpg" alt="Third slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div><!-- /carousel -->
            </div>
        </div>
        <div class="row">
            <div class="banner">
                <div class="col-sm-4">
                    <img src="~/Asset/images/subbanner1.jpg" />
                </div>
                <div class="col-sm-4">
                    <img src="~/Asset/images/subbanner2.jpg" />
                </div>
                <div class="col-sm-4">
                    <img src="~/Asset/images/subbanner3.jpg" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="heading"><h2>Các dòng sản phẩm</h2></div>
                <div class="products">
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="@Url.Action("Nhanhieu", "Shop", new { idnhanhieu = 1 })"><img style="max-height:200px"src="~/Asset/images/1.png" /></a></div>
                            <div class="caption">
                                <div class="name"><h3><a href="#">Iphone</a></h3></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="@Url.Action("Nhanhieu", "Shop", new { idnhanhieu = 2 })"><img style="max-height:200px"src="~/Asset/images/Sam Sung 1.jpeg" /></a></div>
                            <div class="caption">
                                <div class="name"><h3><a href="#">Samsung</a></h3></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="@Url.Action("Nhanhieu", "Shop", new { idnhanhieu = 3 })"><img style="max-height:200px" src="~/Asset/images/Oppo 2.jpg" /></a></div>
                            <div class="caption">
                                <div class="name"><h3><a href="#">Oppo</a></h3></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="@Url.Action("Nhanhieu", "Shop", new { idnhanhieu = 1 })"><img style="max-height:200px"src="~/Asset/images/Iphone 9.jpeg" /></a></div>
                            <div class="caption">
                                <div class="name"><h3><a href="#">Iphone</a></h3></div>
                              </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="banner">
                <div class="col-sm-6">
                    <img src="~/Asset/images/sub-banner4.jpg" />
                </div>
                <div class="col-sm-6">
                    <img src="~/Asset/images/sub-banner5.png" />
                </div>
            </div>
        </div>
    </div>
</div>
